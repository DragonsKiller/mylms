<p id="notice"><%= notice %></p>

<h1>Brigades</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brigade Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brigades.each do |brigade| %>
      <tr>
        <td><%= brigade.name %></td>
        <td><%= Student.find(brigade.brigade_admin_id).last_name+' '+
        Student.find(brigade.brigade_admin_id).first_name+' '+
        Student.find(brigade.brigade_admin_id).second_name %>
        <td><%= link_to 'Show', brigade_brigade_memberships_path(brigade) %></td>
        <% if student_signed_in? %>
          <% if brigade.brigade_admin_id == current_student.id %>
          <td><%= link_to 'Edit', edit_brigade_path(brigade) %></td>
          <td><%= link_to 'Destroy', brigade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

