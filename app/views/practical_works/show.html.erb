<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @practical_work.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @practical_work.description %>
</p>

<p>
  <strong>Mark:</strong>
  <%= @practical_work.mark %>
</p>

<% if teacher_signed_in? %>
  <p>
    <strong>Student:</strong>
    <%= @practical_work.student.last_name+' '+@practical_work.student.first_name+' '+@practical_work.student.second_name %>
  </p>
<% elsif student_signed_in? %>
  <p>
    <strong>Teacher:</strong>
    <%= @practical_work.teacher.last_name+' '+@practical_work.teacher.first_name+' '+@practical_work.teacher.second_name %>
  </p>
<% end %>
<p>
  <strong>Semester:</strong>
  <%= @practical_work.academic_plan.semester_id %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @practical_work.academic_plan.subject.name %>
</p>

<p>
  <strong>End date:</strong>
  <%= @practical_work.end_date %>
</p>

<p>
  <strong>Load date:</strong>
  <%= @practical_work.load_date %>
</p>

<% if student_signed_in? %>
  <%= link_to 'Edit', edit_student_practical_work_path(current_student, @practical_work) %> |
  <%= link_to 'Back', student_practical_works_path(current_student) %>
<% elsif teacher_signed_in? %>
  <%= link_to 'Edit', edit_teacher_practical_work_path(current_teacher, @practical_work) %> |
  <%= link_to 'Back', teacher_practical_works_path(current_teacher) %>
<% end %>
