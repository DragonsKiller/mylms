<p id="notice"><%= notice %></p>

<h1>Academic Plans</h1>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @academic_plans.each do |academic_plan| %>
      <tr>
        <td><%= academic_plan.semester.id %></td>
        <td><%= academic_plan.subject.name %></td>
        <td><%= link_to 'Show', academic_plan %></td>
        <td><%= link_to 'Edit', edit_academic_plan_path(academic_plan) %></td>
        <td><%= link_to 'Destroy', academic_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Academic Plan', new_academic_plan_path %>
